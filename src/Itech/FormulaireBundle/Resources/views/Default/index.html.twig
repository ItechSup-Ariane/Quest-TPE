{% extends "::base.html.twig" %}

{% block body %}
    <h1>Selectionner le questionnaire :</h1>
    <div name='choixQuestionnaire'>
        <ul>
            {% if questionnaires is defined %}
                {% for questionnaire in questionnaires %}
                    <li><a href={{ path('afficher_questionnaire', {'id':questionnaire.id}) }}>{{ questionnaire.title }}</a></li>
                    {% endfor %}
                {% else %}
                <li>Il n'y a aucun formulaire non complété</li>
                {% endif %}
        </ul>
    </div>
    {% if name == 'admin' %}
        <form action={{ path('index_admin') }}>
            <input type='submit'  value=' Menu Admin'/>
        </form>
    {% endif %}

    <a href="{{ path("fos_user_security_login") }}"> Connecté en tant que : {{ name }} </a>

{% endblock %}
